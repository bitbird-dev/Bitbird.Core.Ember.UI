{{#tr-editor as |e|}}
    {{#e.label}}
        {{tr-error-tooltip errors=errors}}
        {{label}}
        {{tr-info-tooltip title=title content=info}}
    {{/e.label}}
    {{#if prefix}}
        {{#e.prefix}}
            {{as-html prefix}}
        {{/e.prefix}}
    {{/if}}
    {{#e.content}}
        {{#if value}}
            <span class="tr-qrcode-editor-code">
                {{qr-code text=value width=size height=size correctLevel="L" style="inline-block"}}
            </span>
        {{else}}
            <span class="tr-qrcode-editor-no-code">
                <i class="fa fa-qrcode fa-4x fade"></i>
            </span>
        {{/if}}
        <div style="margin-left: 80px;">
            <small>
                {{#if isEditing}}
                    {{tr-text-editor value=value maxLength=maxLength}}
                    <button class="tr-qrcode-editor-button" {{action 'commit'}}><i class="fa fa-check"></i></button>
                {{else}}
                    {{#if value}}
                        Code: '{{value}}'<br>
                    {{else}}
                        Code: n/a<br>
                    {{/if}}
                    <button class="tr-qrcode-editor-button" {{action 'edit'}}><i class="fa fa-pencil"></i></button>
                    <button class="tr-qrcode-editor-button" {{action 'generateNew'}}><i class="fa fa-refresh"></i></button>
                    {{#if value}}
                        <button class="tr-qrcode-editor-button" {{action 'print'}}><i class="fa fa-print"></i></button>
                        {{#if isPrinting}}
                            <div class="tr-qrcode-editor-printable" style="opacity: 0.0001; position: absolute;">
                                {{qr-code text=value width=printSize height=printSize correctLevel="L" style="inline-block"}}
                                <p>
                                    Code: <i>{{value}}</i>
                                </p>
                            </div>
                        {{/if}}
                    {{/if}}
                {{/if}}
            </small>
        </div>
    {{/e.content}}
    {{#if postfix}}
        {{#e.postfix}}
            {{as-html postfix}}
        {{/e.postfix}}
    {{/if}}
{{/tr-editor}}
