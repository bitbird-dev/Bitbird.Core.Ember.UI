{{#tr-editor as |e|}}
    {{#e.label}}
        {{tr-error-tooltip errors=errors}}
        {{label}}
        {{tr-info-tooltip title=title content=info}}
    {{/e.label}}
    {{#if prefix}}
        {{#e.prefix}}
            {{as-html prefix}}
        {{/e.prefix}}
    {{/if}}
    {{#e.content}}
        {{input value=displayValue placeholder=placeholder disabled=isDisabled readonly=isReadonly}}
    {{/e.content}}
    {{#if postfix}}
        {{#e.postfix}}
            {{as-html postfix}}
        {{/e.postfix}}
    {{/if}}
{{/tr-editor}}