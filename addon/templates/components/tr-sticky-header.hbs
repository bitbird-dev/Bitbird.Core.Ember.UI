{{#if showImage}}
    {{#tr-image-upload image=image imagePlaceholder=imagePlaceholder showImageUpload=showImageUpload showImageDelete=showImageDelete showImagePlaceholder=showImagePlaceholder onUpload=onUpload onDelete=onDelete}}
        {{imagePlaceholder}}
    {{/tr-image-upload}}
{{/if}}
{{#if showHeader}}
    <div class="tr-sticky-header-content">
        {{#if subheader}}
            <h2>{{subheader}}</h2>
        {{/if}}
        {{#if header}}
            <h1>{{header}}</h1>
        {{else}}
            {{yield (hash header=(component 'tr-container' tagName=''))}}
        {{/if}}
        {{yield (hash content=(component 'tr-container' tagName=''))}}
    </div>
{{/if}}
{{#if showMenu}}
    {{yield (hash menu=(component 'tr-menubar'))}}
{{/if}}